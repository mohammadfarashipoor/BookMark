{
  "name": "markcode",
  "displayName": "markCode",
  "description": "M{ee}M Bookmark",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:markCode",
    "onCommand:markCode.addItem"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "markCode",
        "contents": "Right click and add a file or folder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "markCode",
          "name": "Explorer Bookmark"
        }
      ]
    },
    "commands": [
      {
        "command": "markCode.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "markCode.addItem",
        "title": "Add to Bookmark Tree"
      },
      {
        "command": "markCode.open1",
        "title": "Open First Bookmark"
      },
      {
        "command": "markCode.open2",
        "title": "Open Second Bookmark"
      },
      {
        "command": "markCode.open3",
        "title": "Open Thrid Bookmark"
      },
      {
        "command": "markCode.removeItem",
        "title": "Remove from Explorer Bookmark",
        "icon": "$(close)"
      },
      {
        "command": "markCode.removeAllItems",
        "title": "Remove All Items",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "markCode.refreshEntry",
          "when": "view == markCode",
          "group": "navigation"
        },
        {
          "command": "markCode.removeAllItems",
          "when": "view == markCode",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "markCode.addItem"
        }
      ],
      "view/item/context": [
        {
          "command": "markCode.removeItem",
          "when": "view == markCode"
        },
        {
          "command": "markCode.removeItem",
          "when": "view == markCode",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest --testPathPattern=src/__tests__/*"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
}
